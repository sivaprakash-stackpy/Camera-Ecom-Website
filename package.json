{
  "name": "camera-website",
  "version": "1.0.0",
  "description": "A stylish camera e-commerce website",
  "main": "server.js",
  "scripts": {
    "start": "node render-start.js",
    "server": "node server.js",
    "client": "cd public && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd public && npm install && npm run build",
    "heroku-postbuild": "npm run build",
    "render-postbuild": "npm run build",
    "vercel-build": "npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.1",
    "hpp": "^0.2.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
